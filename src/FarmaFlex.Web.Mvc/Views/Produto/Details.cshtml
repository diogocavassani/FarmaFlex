@model APIFarmaFlex.Domain.Models.Produto

<h1>Detalhes</h1>

<div>

    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutoId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdutoId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoriaId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EAN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EAN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoPromocional)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecoPromocional)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StatusProduto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusProduto)
        </dd>
        @if (Model.Foto != "")
        {
            <dt class="col-sm-2">
                Imagem:
            </dt>
            <dd class="col-sm-10">
                @{
                    <img src="@Model.Foto" />
                }
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-danger fa fa-arrow-left fa-2x text-decoration-none" title="Voltar"></a>
    <a asp-action="Edit" asp-route-id="@Model.ProdutoId" class="btn btn-warning fa fa-pencil fa-2x text-decoration-none" title="Editar"></a>
</div>