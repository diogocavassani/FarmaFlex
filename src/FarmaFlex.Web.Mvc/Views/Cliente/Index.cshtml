@model IEnumerable<APIFarmaFlex.Domain.Models.Cliente>

@{
    ViewData["Title"] = "Lista Clientes";


}

<table class="table table-bordered table-hover">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SobreNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SobreNome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CPF)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataNascimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone.NumeroTelefone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <button type="button" class="btn btn-success">
                            <a asp-action="Details" asp-route-id="@item.ClienteId" class="fa fa-search fa-2x text-decoration-none" title="Detalhes"></a>
                        </button>
                        <button type="button" class="btn btn-danger">
                            <a asp-action="Delete" asp-route-id="@item.ClienteId" class="fa fa-trash fa-2x text-decoration-none" title="Excluir"></a>
                        </button>
                    </td>

                </tr>
            }}

    </tbody>
</table>